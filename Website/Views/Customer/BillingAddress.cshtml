@{
    ViewData["Title"] = "Billing Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section section--small-top-padding" style="padding: 40px 0 40px;margin-top:100px;background-color:white;">
    <div class="page-content">
        <div class="holder mt-0">
            <div class="container">
                <ul class="breadcrumb">
                    <li><a href="/home/index">Home</a></li>
                    <li>My Account</li>
                </ul>
            </div>
        </div>
        <div class="holder mt-0">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 aside aside--left">
                        <div class="list-group">
                            <a href="/Customer/AccountDetails" class="list-group-item">Account Details</a>
                            <a href="/Customer/BillingAddress" class="list-group-item active">Billing Address</a>
                            <a href="/Customer/Wishlist" class="list-group-item">My Wishlist</a>
                            <a href="/Customer/OrderHistory" class="list-group-item">My Order History</a>
                            <a href="#" id="btnLogOut" class="list-group-item">Sign Out</a>
                        </div>
                    </div>
                    <div class="col-md-9 aside">
                        <h2>My Addresses</h2>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="card" style="text-transform:none;background-color:white;min-height:0px;">
                                    <div class="card-body" id="billingAddress">
                                        <h3>Billing Address</h3>
                                        <p>Allha Malum</p>
                                        <div class="mt-2 clearfix" onclick="editDetails(0)">
                                            <a href="#" class="link-icn js-show-form" data-form="#updateAddress">
                                                <i class="bx bx-pencil"></i>
                                                Edit
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3" id="updateDetails" style="text-transform:none;background-color:white;min-height:0px;">
                            <div id="updateInfoDetails">
                                <div class="card-body">
                                    <h3>Edit Address</h3>
                                    <label class="text-uppercase">Country:</label>
                                    <div class="form-group select-wrapper">
                                        <select class="form-control" id="country" name="country"></select>
                                    </div>
                                    <label class="text-uppercase">State:</label>
                                    <div class="form-group select-wrapper">
                                        <select class="form-control" disabled id="state" name="state"></select>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label class="text-uppercase">City:</label>
                                            <div class="form-group">
                                                <input type="text" id="city" value="" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <label class="text-uppercase">zip/postal code:</label>
                                            <div class="form-group">
                                                <input type="text" id="postalCode" value="" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <label class="text-uppercase">Address:</label>
                                    <div class="form-group select-wrapper">
                                        <input type="text" id="address" value="" class="form-control">
                                    </div>
                                    <div class="mt-2">
                                        <button type="reset" onclick="closeDetailsDiv()" class="btn btn--alt js-close-form" data-form="#updateAddress">Cancel</button>
                                        <button type="submit" onclick="UpdateDetails(${id})" class="btn ml-1">Save Changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        (() => {
            getCountry();
        })()

    </script>
}