                                <div class="cart-table-prd-image"><a href="javascript:void(0)"><img src="~/assets/img/cta-bg.jpg" alt=""></a></div>
                                <div class="cart-table-prd-name">
                                    <h4><a href="#">00000216</a></h4>
                                    <h2><a href="#">HEERA AGAR AGAR POWDER 100G</a></h2>
                                </div>
                                <div class="cart-table-prd-price"><span id="price">price:</span> <b>৳ 1050.00</b></div>
                                <div class="cart-table-prd-action" style="width:2px;"><a href="#" title="Remove From Cart" class="icon-cross"><i class="bx bx-x"></i></a></div>
                                <div class="cart-table-addtocart">
                                    <a href="#" class="btn btnAddToCart">Add To Cart</a>
                                </div>
                            </div>
                            <div class="cart-table-prd">
                                <div class="cart-table-prd-image"><a href="javascript:void(0)"><img src="~/assets/img/cta-bg.jpg" alt=""></a></div>
                                <div class="cart-table-prd-name">
                                    <h4><a href="#">00000216</a></h4>
                                    <h2><a href="#">HEERA AGAR AGAR POWDER 100G</a></h2>
                                </div>
                                <div class="cart-table-prd-price"><span id="price">price:</span> <b>৳ 1050.00</b></div>
                                <div class="cart-table-prd-action" style="width:2px;"><a href="#" title="Remove From Cart" class="icon-cross"><i class="bx bx-x"></i></a></div>
                                <div class="cart-table-addtocart">
                                    <a href="#" class="btn btnAddToCart">Add To Cart</a>
                                </div>
                            </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

