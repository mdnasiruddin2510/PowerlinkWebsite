@{
    ViewData["Title"] = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section section--small-top-padding" style="padding: 40px 0 40px;margin-top:100px;background-color:white;">
    <div class="page-content">
        <div class="holder mt-0">
            <div class="container">
                <ul class="breadcrumb">
                    <li><a href="/home/index">Home</a></li>
                    <li>My Account</li>
                </ul>
            </div>
        </div>
        <div class="holder mt-0">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 aside aside--left">
                        <div class="list-group">
                            <a href="/Customer/AccountDetails" class="list-group-item">Account Details</a>
                            <a href="/Customer/BillingAddress" class="list-group-item">Billing Address</a>
                            <a href="/Customer/Wishlist" class="list-group-item active">My Wishlist</a>
